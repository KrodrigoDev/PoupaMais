<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Informativo1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/img_um"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/textInformativo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/organize_suas_contas_de_onde_estiver"
        android:textAlignment="center"
        android:textColor="@color/pretoDestaque"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textInformativo1.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simples_f_cil_de_usar_e_gr_tis"
        android:textAlignment="center"
        android:textColor="@color/cinzaEscuro"
        android:textSize="17sp" />

</LinearLayout>